{
    "ServiceSpec": {
      "Name": "sensorloggermobileappagent",
      "TaskTemplate": {
        "ContainerSpec": {
          "Image": "sensorloggermobileappagent:2.0.0",
          "Mounts": [
            {
                "Type": "bind",
                "Source": "../../../../../../Agents/SensorLoggerMobileAppAgent/sensorloggermobileappagent/src/main/resources",
                "Target": "/resources"
            }
          ],
          "Env": [
            "JAVA_TOOL_OPTIONS=-agentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=*:5005"
          ],  
          "Configs": [
            {
              "ConfigName": "blazegraph"
            },
            {
              "ConfigName": "postgis"
            },
            {
              "ConfigName": "geoserver"
            }
          ],
          "Secrets": [
            {
              "SecretName": "postgis_password"
            },
            {
              "SecretName": "geoserver_password"
            }
          ]
        }
      },
      "EndpointSpec": {
        "Ports": [
          {
            "Name": "web",
            "Protocol": "tcp",
            "TargetPort": "5005",
            "PublishedPort": "5005"
          }
        ]
      }
    },
    "endpoints": {
      "isochroneagent": {
        "url": "http://localhost:8080/sensorloggermobileappagent/",
        "externalPath": "/sensorloggermobileappagent/"
      }
    }
  }