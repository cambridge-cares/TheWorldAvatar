{
  "ServiceSpec": {
    "Name": "user-agent",
    "TaskTemplate": {
      "ContainerSpec": {
        "Image": "ghcr.io/cambridge-cares/user-agent:1.0.0",
        "Mounts": [
          {
            "Type": "bind",
            "Source": "user.obda",
            "Target": "/inputs/user.obda"
          }
        ],
        "Configs": [
          {
            "ConfigName": "blazegraph"
          },
          {
            "ConfigName": "postgis"
          }
        ],
        "Secrets": [
          {
            "SecretName": "postgis_password"
          }
        ]
      }
    },
    "EndpointSpec": {
      "Ports": [
        {
          "Name": "web",
          "Protocol": "tcp",
          "TargetPort": "5005",
          "PublishedPort": "5005"
        }
      ]
    }
  },
  "endpoints": {
    "isochroneagent": {
      "url": "http://localhost:8080/user-agent/",
      "externalPath": "/user-agent/"
    }
  }
}