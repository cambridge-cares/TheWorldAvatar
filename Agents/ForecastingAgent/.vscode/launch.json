    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Flask App",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "forecastingagent:create_app()",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                //To ensure proper working of VSCodes debugger:
                //https://flask.palletsprojects.com/en/2.2.x/debugging/#external-debuggers
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        },
        {
            "name": "Python: Debug within Docker",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/",
                    "remoteRoot": "/app/"
                }
            ]
        }
    ]
}