{
  "ServiceSpec": {
    "Name": "isochroneagent",
    "TaskTemplate": {
      "ContainerSpec": {
        "Image": "isochroneagent:1.3.0",
        "Env": [
          "JAVA_TOOL_OPTIONS=-agentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=*:5005"
        ],
        "Mounts": [
          {
            "Type": "bind",
            "Source": "<REPLACE_WITH_YOUR_DIRECTORY>/TheWorldAvatar/Agents/IsochroneAgent/inputs",
            "Target": "/inputs"
          }
        ],
        "Configs": [
          {
            "ConfigName": "blazegraph"
          },
          {
            "ConfigName": "postgis"
          },
          {
            "ConfigName": "geoserver"
          }
        ],
        "Secrets": [
          {
            "SecretName": "postgis_password"
          },
          {
            "SecretName": "geoserver_password"
          }
        ]
      }
    },
    "EndpointSpec": {
      "Ports": [
        {
          "Name": "web",
          "Protocol": "tcp",
          "TargetPort": "5005",
          "PublishedPort": "5005"
        }
      ]
    }
  },
  "endpoints": {
    "isochroneagent": {
      "url": "http://localhost:8080/isochroneagent/",
      "externalPath": "/isochroneagent/"
    }
  }
}