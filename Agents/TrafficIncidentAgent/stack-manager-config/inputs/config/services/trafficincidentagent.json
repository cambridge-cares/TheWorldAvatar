{
    "ServiceSpec": {
        "Name": "TrafficIncidentAgent",
        "TaskTemplate": {
            "ContainerSpec": {
                "Image": "ghcr.io/cambridge-cares/TrafficIncidentAgent:1.3.0",
                "Mounts": [
                    {
                      "Type": "bind",
                      "Source": "../../../../../../Agents/TrafficIncidentAgent/config",
                      "Target": "/config"
                    }
            ],
                "Configs": [
                    {
                        "ConfigName": "blazegraph"
                    },
                    {
                        "ConfigName": "postgis"
                    },
                    {
                        "ConfigName": "geoserver"
                    }
                ],
                "Secrets": [
                    {
                        "SecretName": "postgis_password"
                    },
                    {
                        "SecretName": "geoserver_password"
                    }
                ]
            }
        }
    },
    "endpoints": {
        "TrafficIncidentAgent": {
          "url": "http://localhost:8080/TrafficIncidentAgent/",
          "externalPath": "/TrafficIncidentAgent/"
        }
    }
}