{
  "ServiceSpec": {
    "Name": "trafficincidentagent",
    "TaskTemplate": {
      "ContainerSpec": {
        "Image": "traffic-incident-agent:1.4.0",
        "Env": [
          "JAVA_TOOL_OPTIONS=-agentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=*:5005"
        ],
        "Mounts": [
          {
            "Type": "bind",
            "Source": "../../../../../../Agents/TrafficIncidentAgent/config",
            "Target": "/config"
          }
        ],
        "Configs": [
          {
            "ConfigName": "blazegraph"
          },
          {
            "ConfigName": "postgis"
          },
          {
            "ConfigName": "geoserver"
          }
        ],
        "Secrets": [
          {
            "SecretName": "postgis_password"
          },
          {
            "SecretName": "geoserver_password"
          }
        ]
      }
    },
    "EndpointSpec": {
      "Ports": [
        {
          "Name": "web",
          "Protocol": "tcp",
          "TargetPort": "5005",
          "PublishedPort": "5005"
        }
      ]
    }
  },
  "endpoints": {
    "trafficincidentagent": {
      "url": "http://localhost:8080/traffic-incident-agent/retrieve",
      "externalPath": "/traffic-incident-agent/retrieve"
    }
  }
}