{
  "ServiceSpec": {
    "Name": "data-bridge-agent",
    "TaskTemplate": {
      "ContainerSpec": {
        "Image": "data-bridge-agent:1.0.0",
        "Mounts": [
          {
            "Type": "bind",
            "Source": "/home/common/Codes/TheWorldAvatar/Agents/DataBridgeAgent/config",
            "Target": "/usr/local/tomcat/config"
          }
        ],
        "Configs": [
          {
            "ConfigName": "blazegraph"
          },
          {
            "ConfigName": "postgis"
          }
        ],
        "Secrets": [
          {
            "SecretName": "postgis_password"
          }
        ]
      }
    }
  },
  "endpoints": {
    "rest": {
      "url": "http://localhost:8080/data-bridge-agent/",
      "externalPath": "/data-bridge-agent/"
    }
  }
}