{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Flask App",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "floodassessment:create_app()",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                //To ensure proper working of VSCodes debugger:
                //https://flask.palletsprojects.com/en/2.2.x/debugging/#external-debuggers
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        },
        {
            "name": "Python: Debug Flask within Docker",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/floodassessment/",
                    "remoteRoot": "/app/floodassessment/"
                }
            ]
        },
        {
            "name": "Python: Debug dockerised Tests",
            "type": "python",
            "request": "attach",
            "preLaunchTask": "compose-dockerised-test",
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/",
                    "remoteRoot": "/app/"
                }
            ]
        },
        {
            "type": "python",
            "name": "Stack: Debug",
            "request": "attach",
            "host": "localhost",
            "port": "${input:debug.port}",
            "preLaunchTask": "compose-deploy",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/floodassessment",
                    "remoteRoot": "/app/floodassessment"
                }
            ]
        },
        {
            "type": "python",
            "name": "Stack: Build and Debug",
            "request": "attach",
            "host": "localhost",
            "port": "${input:debug.port}",
            "preLaunchTask": "compose-build-deploy",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/floodassessment",
                    "remoteRoot": "/app/floodassessment"
                }
            ]
        },
        {
            "type": "python",
            "name": "Stack: Reattach and Debug",
            "request": "attach",
            "host": "localhost",
            "port": "${input:debug.port.read}",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/floodassessment",
                    "remoteRoot": "/app/floodassessment"
                }
            ]
        }
    ],
    "inputs": [
        {
            "id": "debug.port",
            "type": "command",
            // Get the next avaliable debug port and write it to the cache file
            "command": "shellCommand.execute",
            "args": {
                "command": "bash ./stack.sh ports write",
                "useFirstResult": true
            }
        },
        {
            "id": "debug.port.read",
            "type": "command",
            // Get the last debug port from the cache file
            "command": "shellCommand.execute",
            "args": {
                "command": "bash ./stack.sh ports read",
                "useFirstResult": true
            }
        }
    ]
}