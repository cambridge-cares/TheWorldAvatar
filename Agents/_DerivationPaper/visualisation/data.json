{
    "name": "All Data",
    "groups": [
        {
            "name": "Buildings",
            "sources": [
                {
                    "id": "area-of-interest",
                    "type": "geojson",
                    "data": "data/aoi.geojson", 
                    "generateId": true
                },
                {
                    "id": "buildings-not-affected",
                    "type": "geojson",
                    "data": "data/not_affected_buildings.geojson", 
                    "generateId": true
                }
            ], 
            "layers": [
                {
                    "id": "aoi-layer",
                    "name": "Area of interest", 
                    "source": "area-of-interest",
                    "type": "circle",
                    "treeable": false,
                    "maxzoom": 10,
                    "order": 0,
                    "layout": {
                        "visibility": "visible"
                    },
                    "paint": {
                        "circle-radius": ["interpolate", ["linear"], ["zoom"], 4, 25, 8, 100],
                        "circle-opacity": 0.25,
                        "circle-color": "#000000",
                        "circle-stroke-width": 0
                    }
                },
                {
                    "id": "buildings-not-affected-layer",
                    "name": "Other Buildings", 
                    "source": "buildings-not-affected",
                    "type": "circle",
                    "minzoom": 12,
                    "order": 3,
                    "layout": {
                        "visibility": "visible"
                    },
                    "paint": {
                        "circle-radius": ["interpolate", ["linear"], ["zoom"], 12, 1, 18, 10],
                        "circle-opacity": 1.0,
                        "circle-color": "#000000"
                    }
                }
            ],
            "groups": [
                {
                    "name": "Buildings at risk of flooding",
                    "sources": [
                        {
                            "id": "buildings-affected-1",
                            "type": "geojson",
                            "data": "data/affected_buildings_first_round_adj.geojson", 
                            "generateId": true
                        },
                        {
                            "id": "buildings-affected-2",
                            "type": "geojson",
                            "data": "data/affected_buildings_second_round_adj.geojson", 
                            "generateId": true
                        }
                    ], 
                    "layers": [
                        {
                            "id": "buildings-affected-2-layer",
                            "name": "Derivation cascade 2", 
                            "source": "buildings-affected-2",
                            "type": "circle",
                            "minzoom": 12,
                            "order": 5,
                            "layout": {
                                "visibility": "visible"
                            },
                            "paint": {
                                "circle-radius": [
                                    "interpolate", ["linear"],
                                    ["number", ["get", "Property market value (£)"]],
                                    140000, 5,
                                    460000, 15
                                ],
                                "circle-opacity": 1.0,
                                "circle-color": [
                                    "interpolate", ["linear"],
                                    ["number", ["get", "Property market value (£)"]],
                                    140000, "#0275C0",
                                    460000, "#AD0709"
                                ],
                                "circle-stroke-color": "#000000",
                                "circle-stroke-width": 0.5
                            }
                        },
                        {
                            "id": "buildings-affected-1-layer",
                            "name": "Derivation cascade 1", 
                            "source": "buildings-affected-1",
                            "type": "circle",
                            "minzoom": 12,
                            "order": 4,
                            "layout": {
                                "visibility": "visible"
                            },
                            "paint": {
                                "circle-radius": [
                                    "interpolate", ["linear"],
                                    ["number", ["get", "Property market value (£)"]],
                                    140000, 5,
                                    460000, 15
                                ],
                                "circle-opacity": 1.0,
                                "circle-color": [
                                    "interpolate", ["linear"],
                                    ["number", ["get", "Property market value (£)"]],
                                    140000, "#0275C0",
                                    460000, "#AD0709"
                                ],
                                "circle-stroke-color": "#000000",
                                "circle-stroke-width": 0.5
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "Active Flood Warnings",
            "sources": [
                {
                    "id": "flood-warning-1",
                    "type": "geojson",
                    "data": "data/flood-areas_first_round_adj.geojson", 
                    "generateId": true
                },
                {
                    "id": "flood-warning-2",
                    "type": "geojson",
                    "data": "data/flood-areas_second_round_adj.geojson", 
                    "generateId": true
                }
            ], 
            "layers": [
                {
                    "id": "flood-warning-layer-2",
                    "name": "Derivation cascade 2", 
                    "source": "flood-warning-2",
                    "type": "fill",
                    "order": 2,
                    "layout": {
                        "visibility": "visible"
                    },
                    "paint": {
                        "fill-color": [
                            "interpolate", ["linear"],
                            ["/", ["number", ["get", "Estimated market value (£m)", ["get", "Buildings at risk"]]],
                                  ["number", ["get", "Number of buildings", ["get", "Buildings at risk"]]]],
                            140, "#0275C0",
                            460, "#AD0709"
                        ],
                        "fill-opacity": 0.25,
                        "fill-outline-color": "#000000"
                    }
                },
                {
                    "id": "flood-warning-layer-1",
                    "name": "Derivation cascade 1", 
                    "source": "flood-warning-1",
                    "type": "fill",
                    "order": 0.33,
                    "layout": {
                        "visibility": "visible"
                    },
                    "paint": {
                        "fill-color": [
                            "interpolate", ["linear"],
                            ["/", ["number", ["get", "Estimated market value (£m)", ["get", "Buildings at risk"]]],
                                  ["number", ["get", "Number of buildings", ["get", "Buildings at risk"]]]],
                            140, "#0275C0",
                            460, "#AD0709"
                        ],
                        "fill-opacity": 0.25,
                        "fill-outline-color": "#000000"
                    }
                }
            ]
        }
    ]
}