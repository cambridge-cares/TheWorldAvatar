<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AssetManagementApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/banner_color</item>
        <item name="colorPrimaryVariant">?attr/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="textAppearanceSubtitle1">@style/Subtitle1</item>
        <item name="textAppearanceBody2">@style/Body2</item>
        <item name="toolbarStyle">@style/Toolbar</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="titleCentered">true</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="titleMarginTop">13dp</item>
        <item name="popupTheme">@style/PopupMenu</item>
    </style>

    <style name="PopupMenu">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Theme.AssetManagementApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.AssetManagementApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="background">@color/banner_color</item>
    </style>

    <style name="Theme.AssetManagementApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LoginTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/banner_color</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="HomeCardview" parent="Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">25dp</item>
        <item name="cornerSizeTopLeft">25dp</item>
        <item name="cornerSizeBottomRight">25dp</item>
        <item name="cornerSizeBottomLeft">25dp</item>
        <item name="contentPadding">0dp</item>
    </style>

    <style name="Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Body2" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">#99000000</item>
    </style>
</resources>