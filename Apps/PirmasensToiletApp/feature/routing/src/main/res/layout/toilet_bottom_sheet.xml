<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/bottom_sheet_linear_layout"
        style="@style/BottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/component_margin"
        android:paddingTop="@dimen/component_margin_xs"
        app:behavior_hideable="true"
        app:behavior_peekHeight="80dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <com.google.android.material.bottomsheet.BottomSheetDragHandleView
            android:id="@+id/drag_handle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/component_margin_small" />


        <!--<TextView
            android:id="@+id/address_name_tv"
            android:layout_marginVertical="@dimen/component_margin_xs"
            style="@style/TextAppearance.Material3.TitleLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/component_margin_xs"
            android:text="Name" />-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/wheelchair_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_accessible_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/dot_divider"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/grey" />


            <ImageView
                android:id="@+id/dot_divider"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:src="@drawable/baseline_circle_24"
                app:layout_constraintBottom_toBottomOf="@id/has_males_icon"
                app:layout_constraintEnd_toStartOf="@id/has_males_icon"
                app:layout_constraintTop_toTopOf="@id/has_males_icon"
                app:tint="@color/grey" />

            <ImageView
                android:id="@+id/has_males_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/baseline_boy_24"
                app:layout_constraintEnd_toStartOf="@id/has_female_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/grey" />

            <View
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_marginVertical="2dp"
                android:background="@color/grey"
                app:layout_constraintBottom_toBottomOf="@id/has_males_icon"
                app:layout_constraintEnd_toEndOf="@id/has_female_icon"
                app:layout_constraintStart_toStartOf="@id/has_males_icon"
                app:layout_constraintTop_toTopOf="@id/has_males_icon" />


            <ImageView
                android:id="@+id/has_female_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/baseline_girl_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/dot_divider1"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/grey" />

            <ImageView
                android:id="@+id/dot_divider1"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginEnd="@dimen/component_margin_xs"
                android:src="@drawable/baseline_circle_24"
                app:layout_constraintBottom_toBottomOf="@id/has_males_icon"
                app:layout_constraintEnd_toStartOf="@id/transport_method_icon"
                app:layout_constraintTop_toTopOf="@id/has_males_icon"
                app:tint="@color/grey" />

            <ImageView
                android:id="@+id/transport_method_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="@dimen/component_margin_xs"
                android:src="@drawable/baseline_directions_walk_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/route_time_estimation_tv"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/dark_grey" />

            <TextView
                android:id="@+id/route_time_estimation_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/component_margin_xs"
                android:gravity="center"
                android:text="-"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/dot_divider2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/dot_divider2"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginHorizontal="@dimen/component_margin_xs"
                android:src="@drawable/baseline_circle_24"
                app:layout_constraintBottom_toBottomOf="@id/has_males_icon"
                app:layout_constraintEnd_toStartOf="@id/distance_tv"
                app:layout_constraintTop_toTopOf="@id/has_males_icon"
                app:tint="@color/grey" />

            <TextView
                android:id="@+id/distance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/address_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/component_margin_xs"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:foregroundTint="@color/white"
                android:src="@drawable/source_marker" />

            <TextView
                android:id="@+id/detailed_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/component_margin"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/open_hour_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/component_margin_xs"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_access_time_24" />

            <TextView
                android:id="@+id/open_hour_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/component_margin"
                android:text="@string/open_hours" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/price_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/component_margin_xs"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_attach_money_24" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/component_margin"
                android:text="@string/price" />

        </LinearLayout>

        <ImageView
            android:id="@+id/cover_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitCenter"
            android:tint="@color/transparent"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/other_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/component_margin_xs"
            android:orientation="horizontal">

            <Button
                android:id="@+id/report_bt"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/report"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/direction_bt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/direction_bt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/component_margin"
                android:text="@string/direction"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/report_bt"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

