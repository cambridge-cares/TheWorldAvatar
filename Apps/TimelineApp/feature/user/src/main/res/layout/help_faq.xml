<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/top_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:navigationIcon="@drawable/back"
        app:title="Frequently Asked Questions"
        app:titleCentered="true"
        app:navigationIconTint="?attr/colorOnSurface" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="20dp"
        android:clipToPadding="false"
        android:background="#FAFAFA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_faq"
                android:contentDescription="FAQ icon"
                android:layout_marginTop="12dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAQ"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_marginTop="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Got questions? Here are some helpful answers."
                android:textSize="15sp"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="20dp" />

            <LinearLayout
                android:id="@+id/faq1_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:elevation="4dp"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/faq1_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What happens if I don’t grant permission for some sensors?"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#111111" />

                <TextView
                    android:id="@+id/faq1_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="If you deny permission for a sensor, that sensor will be disabled during recording. Other enabled sensors will continue functioning. You can always enable them later in Sensor Settings."
                    android:textSize="15sp"
                    android:textColor="#444444"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq2_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:elevation="4dp"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/faq2_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Will my data be automatically deleted?"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#111111" />

                <TextView
                    android:id="@+id/faq2_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No. All session data stays on your device until you manually delete it via the Timeline Settings page."
                    android:textSize="15sp"
                    android:textColor="#444444"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq3_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:elevation="4dp"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/faq3_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How is my recording data stored?"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#111111" />

                <TextView
                    android:id="@+id/faq3_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your data is stored locally, session by session. It includes movement data, time intervals, and optional sensor input. No cloud backup is done unless enabled separately."
                    android:textSize="15sp"
                    android:textColor="#444444"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq4_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:elevation="4dp"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/faq4_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What insights can I gain from using this app?"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#111111" />

                <TextView
                    android:id="@+id/faq4_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You’ll see where you’ve been, how you traveled, how long you stayed, and how often you return to places. It’s a helpful way to reflect on routines, mobility, and travel time."
                    android:textSize="15sp"
                    android:textColor="#444444"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq5_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:elevation="4dp"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/faq5_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How do I delete my data manually?"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#111111" />

                <TextView
                    android:id="@+id/faq5_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Navigate to the User Menu > Timeline Settings. There, you’ll find options to delete specific sessions or clear all history."
                    android:textSize="15sp"
                    android:textColor="#444444"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq6_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:elevation="4dp"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/faq6_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What happens if I force stop the app while recording?"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#111111" />

                <TextView
                    android:id="@+id/faq6_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="If the app is force stopped, sensor recording will halt and data will not be saved for that session. It’s best to stop recording manually."
                    android:textSize="15sp"
                    android:textColor="#444444"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq7_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:elevation="4dp"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/faq7_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Why is the map not showing my full route?"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#111111" />

                <TextView
                    android:id="@+id/faq7_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This may be due to GPS signal issues, battery optimization settings, or missing permissions. Make sure the app has location access and is not being restricted in the background."
                    android:textSize="15sp"
                    android:textColor="#444444"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq8_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:elevation="4dp"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/faq8_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How does location tracking work?"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#111111" />

                <TextView
                    android:id="@+id/faq8_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Timeline collects your GPS location periodically and logs time spent at places. It does not run continuously and minimizes battery usage."
                    android:textSize="15sp"
                    android:textColor="#444444"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>