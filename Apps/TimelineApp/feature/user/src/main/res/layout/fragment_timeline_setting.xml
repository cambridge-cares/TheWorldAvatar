<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white">

        <!-- FIXED APP BAR -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/timeline_top_appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorSurfaceVariant"
                android:fitsSystemWindows="true"
                app:navigationIcon="@drawable/back"
                app:navigationIconTint="?attr/colorOnSurface"
                app:title="Timeline Settings"
                app:titleTextAppearance="@style/TextAppearance.Material3.TitleLarge"
                app:titleTextColor="?attr/colorOnSurface" />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timeline"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Helps you go back in time and remember where youâ€™ve been by automatically saving your visits and routes to a map."
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/subtitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/timeline_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="On\nOn since 15 May 2025"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/description"
                    app:layout_constraintStart_toStartOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginVertical="24dp"
                    app:layout_constraintTop_toBottomOf="@id/timeline_status"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <Button
                    android:id="@+id/btn_toggle_timeline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Turn Off"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#000000"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="@id/timeline_status"
                    app:layout_constraintBottom_toBottomOf="@id/timeline_status"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/label_autostart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auto-Start Recording (off)"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@id/timeline_status"
                    app:layout_constraintStart_toStartOf="parent" />

                <Switch
                    android:id="@+id/switch_autostart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/label_autostart"
                    app:layout_constraintBottom_toBottomOf="@id/label_autostart"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/autostart_subtext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Automatically start recording your activity when the app is opened"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/label_autostart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginVertical="8dp"
                    app:layout_constraintTop_toBottomOf="@id/autostart_subtext"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/label_autodelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auto-delete (off)"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:drawableStart="@drawable/ic_delete"
                    android:drawablePadding="8dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@id/autostart_subtext"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/btn_auto_delete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Choose an auto-delete option"
                    android:background="?android:selectableItemBackground"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="8dp"
                    android:textColor="?android:textColorPrimary"
                    android:drawableEnd="@drawable/ic_chevron_right"
                    android:drawablePadding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/label_autodelete"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/autodelete_subtext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Automatically delete old location data after a chosen period"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/btn_auto_delete"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginVertical="12dp"
                    app:layout_constraintTop_toBottomOf="@id/autodelete_subtext"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/label_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recording duration"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@id/autodelete_subtext"
                    app:layout_constraintStart_toStartOf="parent" />

                <Spinner
                    android:id="@+id/spinner_duration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/label_duration"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/duration_hint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Control how long you would like the app to record your activity"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/spinner_duration"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <Button
                    android:id="@+id/btn_view_history"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="View Past Location History"
                    android:drawableStart="@drawable/ic_map"
                    android:drawablePadding="8dp"
                    android:backgroundTint="#F0F0F0"
                    android:textColor="#000000"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@id/duration_hint"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginVertical="16dp"
                    app:layout_constraintTop_toBottomOf="@id/duration_hint"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/btn_delete_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete All History Data"
                    android:textColor="#FF0000"
                    android:textStyle="bold"
                    android:padding="16dp"
                    android:textAlignment="center"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="48dp"
                    app:layout_constraintTop_toBottomOf="@id/btn_view_history"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>
