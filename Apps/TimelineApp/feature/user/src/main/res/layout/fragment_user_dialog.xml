<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="accountViewModel"
            type="uk.ac.cam.cares.jps.user.viewmodel.AccountViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:elevation="8dp"
        app:cardCornerRadius="20dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{accountViewModel.name}"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:textStyle="bold"
                android:textColor="#222222"
                android:letterSpacing="0.02"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{accountViewModel.email}"
                android:textSize="13sp"
                android:textColor="#888888"
                android:layout_marginTop="2dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginTop="12dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="?android:attr/listDivider"
                android:showDividers="middle"
                android:dividerPadding="8dp">

                <TextView
                    android:id="@+id/account_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Theme.TWA.UserItem.Text"
                    android:text="Account Settings"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/sensor_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Theme.TWA.UserItem.Text"
                    android:text="Sensor Settings" />

                <TextView
                    android:id="@+id/timeline_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Theme.TWA.UserItem.Text"
                    android:text="Timeline Setting" />

                <TextView
                    android:id="@+id/health_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Theme.TWA.UserItem.Text"
                    android:text="Health Report" />

                <TextView
                    android:id="@+id/location_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Theme.TWA.UserItem.Text"
                    android:text="Location History" />

                <TextView
                    android:id="@+id/privacy_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Theme.TWA.UserItem.Text"
                    android:text="Privacy" />

                <TextView
                    android:id="@+id/help_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Theme.TWA.UserItem.Text"
                    android:text="Help" />

                <TextView
                    android:id="@+id/log_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Theme.TWA.UserItem.Text"
                    android:text="Log Out" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>