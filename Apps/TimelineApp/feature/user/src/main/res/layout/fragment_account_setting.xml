<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="accountViewModel"
            type="uk.ac.cam.cares.jps.user.viewmodel.AccountViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E0E0E0"
        android:paddingHorizontal="24dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingBottom="48dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/map_top_appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                app:navigationIcon="@drawable/back"
                app:navigationIconTint="?attr/colorOnSurface"
                app:title="Account Settings"
                app:titleCentered="true"
                app:titleTextAppearance="@style/TextAppearance.Material3.TitleLarge"
                app:titleTextColor="?attr/colorOnSurface" />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_pic"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="48dp"
                android:scaleType="centerCrop"
                android:elevation="4dp"
                app:shapeAppearanceOverlay="@style/RoundedImageView"
                app:srcCompat="@drawable/timeline_icon" />

            <TextView
                android:id="@+id/user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="@{accountViewModel.name}"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="@{accountViewModel.email}"
                android:textSize="14sp"
                android:textColor="#999999"/>

            <View android:layout_width="match_parent"
                android:layout_height="32dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACCOUNT"
                android:textAllCaps="true"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginBottom="32dp">

                <TextView
                    android:id="@+id/edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    android:text="@string/edit_profile"
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="@drawable/ic_chevron_right"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"/>

                <TextView
                    android:id="@+id/update_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    android:text="@string/update_password"
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="@drawable/ic_chevron_right"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YOUR ACTIVITY"
                android:textAllCaps="true"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginBottom="32dp">

                <TextView
                    android:id="@+id/last_active"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    android:text="Last Active: 16 July 2025"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"/>

                <TextView
                    android:id="@+id/total_sessions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    android:text="Total Sessions Recorded: 24"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SECURITY"
                android:textAllCaps="true"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp">

                <TextView
                    android:id="@+id/sign_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    android:text="@string/sign_out"
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="@drawable/ic_chevron_right"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"/>

                <TextView
                    android:id="@+id/delete_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    android:text="@string/delete_account"
                    android:textColor="#D32F2F"
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="@drawable/ic_chevron_right"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
