<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/top_appbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:navigationIcon="@drawable/back"
        app:navigationIconTint="?attr/colorOnSurface"
        app:title="Location History"
        app:titleCentered="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FAFAFA"
        android:padding="20dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/top_appbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="32dp">

            <TextView
                android:id="@+id/location_history_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track Where Youâ€™ve Been"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_marginTop="12dp"
                android:letterSpacing="0.02" />

            <TextView
                android:id="@+id/location_history_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Timeline helps you reflect on your movement patterns by storing daily history with detailed trajectories."
                android:textSize="15sp"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="20dp" />

            <LinearLayout
                style="@style/HelpCardStyle">

                <TextView
                    style="@style/HelpCardTitle"
                    android:text="Browse by Day" />

                <TextView
                    style="@style/HelpCardSubtitle"
                    android:text="Swipe left or right on the horizontal date bar above the map to select a different day. Each date loads its own set of tracked data." />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="16dp"
                    android:background="#E0E0E0"
                    android:clipToOutline="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="[Image Placeholder: Insert picture of datepicker]"
                        android:textColor="#777777"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:padding="16dp" />
                </FrameLayout>

            </LinearLayout>


            <LinearLayout
                style="@style/HelpCardStyle"
                android:layout_marginTop="12dp">

                <TextView
                    style="@style/HelpCardTitle"
                    android:text="See Your Trajectory" />

                <TextView
                    style="@style/HelpCardSubtitle"
                    android:text="Your movements are displayed as a line connecting GPS points on the map. You can zoom in or tap on parts of the path for more context." />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:clipToOutline="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/map" />
                </FrameLayout>


            </LinearLayout>


            <LinearLayout
                style="@style/HelpCardStyle"
                android:layout_marginTop="12dp">

                <TextView
                    style="@style/HelpCardTitle"
                    android:text="Open the Summary View" />

                <TextView
                    style="@style/HelpCardSubtitle"
                    android:text="Swipe up the bottom sheet to view summaries of recorded sessions, start and end times, and distances travelled." />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:clipToOutline="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/trajectory" />
                </FrameLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Need more help? Tap the Help icon in the top-right menu to revisit guides or contact support."
                android:textSize="14sp"
                android:textColor="#999999"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:paddingHorizontal="24dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>