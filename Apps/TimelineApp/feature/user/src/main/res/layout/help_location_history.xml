<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/top_appbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:navigationIcon="@drawable/back"
        app:navigationIconTint="?attr/colorOnSurface"
        app:title="Location History"
        app:titleCentered="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FAFAFA"
        android:padding="20dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/top_appbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="32dp">

            <TextView
                android:id="@+id/location_history_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timeline_title"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_marginTop="12dp"
                android:letterSpacing="0.02" />

            <TextView
                android:id="@+id/location_history_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timeline_description"
                android:textSize="15sp"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="20dp" />

            <LinearLayout
                style="@style/HelpCardStyle">

                <TextView
                    style="@style/HelpCardTitle"
                    android:text="@string/timeline_datepicker_title" />

                <TextView
                    style="@style/HelpCardSubtitle"
                    android:text="@string/timeline_datepicker_description" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="235dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:clipToOutline="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/timeline_datepicker_image"
                        android:scaleType="fitCenter"
                        android:src="@drawable/datepicker" />
                </FrameLayout>

            </LinearLayout>


            <LinearLayout
                style="@style/HelpCardStyle"
                android:layout_marginTop="12dp">

                <TextView
                    style="@style/HelpCardTitle"
                    android:text="@string/timeline_trajectory_title" />

                <TextView
                    style="@style/HelpCardSubtitle"
                    android:text="@string/timeline_trajectory_description" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:clipToOutline="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/timeline_trajectory_image"
                        android:scaleType="fitCenter"
                        android:src="@drawable/map" />
                </FrameLayout>


            </LinearLayout>


            <LinearLayout
                style="@style/HelpCardStyle"
                android:layout_marginTop="12dp">

                <TextView
                    style="@style/HelpCardTitle"
                    android:text="@string/timeline_session_summary_title" />

                <TextView
                    style="@style/HelpCardSubtitle"
                    android:text="@string/timeline_session_summary_description" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:clipToOutline="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/timeline_session_summary_image"
                        android:scaleType="fitCenter"
                        android:src="@drawable/trajectory" />
                </FrameLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timeline_tips"
                android:textSize="14sp"
                android:textColor="#999999"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:paddingHorizontal="24dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>