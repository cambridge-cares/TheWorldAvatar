<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/faq_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="20dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/faq_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FAQs"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/faq_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frequently asked questions about using Timeline."
            android:textSize="15sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:id="@+id/faq_card_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="20dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/faq_q1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How does location tracking work?"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#111111"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/faq_a1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Timeline collects your GPS location periodically and logs time spent at places. It does not run continuously and minimizes battery usage."
                android:textSize="15sp"
                android:textColor="#444444" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/faq_card_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="20dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/faq_q2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Is my data private?"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#111111"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/faq_a2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes. All data is stored only on your device. Timeline does not share anything unless you manually export it."
                android:textSize="15sp"
                android:textColor="#444444" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/faq_card_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="20dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/faq_q3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Can I view past logs?"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#111111"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/faq_a3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes. Swipe on the timeline bar on the main screen to browse logs from previous days."
                android:textSize="15sp"
                android:textColor="#444444" />
        </LinearLayout>

        <TextView
            android:id="@+id/faq_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Still have questions? Contact support or check the other Help sections."
            android:textSize="14sp"
            android:textColor="#999999"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:paddingHorizontal="20dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
