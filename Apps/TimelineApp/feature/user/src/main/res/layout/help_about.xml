<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/top_appbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:navigationIcon="@drawable/back"
        app:navigationIconTint="?attr/colorOnSurface"
        app:title="About Timeline"
        app:titleCentered="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/about_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FAFAFA"
        android:padding="20dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/top_appbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="32dp">

            <ImageView
                android:id="@+id/about_icon"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/twa_logo"
                android:contentDescription="Timeline icon"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/about_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Timeline"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_marginTop="12dp"
                android:letterSpacing="0.02" />

            <TextView
                android:id="@+id/about_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Understand what Timeline does and how it helps you track movement."
                android:textSize="15sp"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="20dp" />

            <LinearLayout
                android:id="@+id/help_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/help_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Need help using Timeline?"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/help_card_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New? Learn how timeline works."
                    android:textSize="15sp"
                    android:textColor="#444444" />

                <Button
                    android:id="@+id/btn_trigger_tooltips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show me how this works"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="10dp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/section1_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/ic_article"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_article"
                    android:contentDescription="Article Icon"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/section1_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="What is Timeline?"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#111111"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/section1_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Timeline is a smart location tracker that automatically logs where youâ€™ve been, when, and for how long."
                        android:textSize="15sp"
                        android:textColor="#444444"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/section2_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/ic_article_2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_article"
                    android:contentDescription="Article Icon"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/section2_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="What is it used for?"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#111111"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/section2_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Great for fieldwork, travel logs, or daily tracking. Your data stays on your device unless you choose to share it."
                        android:textSize="15sp"
                        android:textColor="#444444"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/section3_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/ic_article_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_article"
                    android:contentDescription="Article Icon"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/section3_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Where can I see my timeline?"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#111111"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/section3_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="On the main screen, scroll the bottom of the bottom sheet. Each date shows sessions recorded throughout the day."
                        android:textSize="15sp"
                        android:textColor="#444444"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="4dp"
                android:backgroundTint="#E0E0E0"
                android:clipToOutline="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[Image: A picture of the bottom container UI in the main screen with an arrow pointing to the dates]"
                    android:textColor="#777777"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="16dp" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You're always in control. Timeline never stores data remotely unless you say so."
                android:textSize="14sp"
                android:textColor="#999999"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:paddingHorizontal="24dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
