                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:textColor="#333333" />

                            <TextView
                                android:text="Permission: Not required"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:textColor="#888888"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_humidity"
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="0dp"
                    app:strokeColor="@android:color/transparent"
                    app:cardBackgroundColor="#FDFDFD">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:id="@+id/header_humidity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_sensor_humidity"
                                android:contentDescription="Humidity icon"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Humidity"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#222222" />

                            <ImageView
                                android:id="@+id/icon_expand_humidity"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_expand_more"
                                android:contentDescription="Expand" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/content_humidity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:paddingTop="12dp">

                            <TextView
                                android:text="Detects the amount of moisture in the air—helpful for analyzing comfort, climate, or indoor air quality."
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#444444"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:text="Data: Relative Humidity (%)"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:textColor="#333333" />

                            <TextView
                                android:text="Permission: Not required"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:textColor="#888888"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_pressure"
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="0dp"
                    app:strokeColor="@android:color/transparent"
                    app:cardBackgroundColor="#FDFDFD">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:id="@+id/header_pressure"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_sensor_pressure"
                                android:contentDescription="Pressure icon"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
