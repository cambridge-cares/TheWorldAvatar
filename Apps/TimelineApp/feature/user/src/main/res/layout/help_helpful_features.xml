<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/top_appbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurfaceVariant"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@drawable/back"
        app:navigationIconTint="?attr/colorOnSurface"
        app:titleCentered="true" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/getting_started_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/top_appbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="32dp">

            <TextView
                android:id="@+id/helpful_features_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discover helpful features"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_marginTop="12dp"
                android:letterSpacing="0.02" />

            <TextView
                android:id="@+id/getting_started_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Timeline offers more than just basic tracking. It’s designed to help you make sense of your movements, reflect on your journeys, and manage your data easily."
                android:textSize="15sp"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="20dp"
                android:paddingHorizontal="16dp" />

            <LinearLayout
                android:id="@+id/step1_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/bg_card"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/step1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Past Sessions at a Glance"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/step1_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your movement history is grouped by date and session in the bottom drawer of the main screen. Each session shows:\n\n• Where and when you moved\n• How long you stayed in one place\n• A visual trajectory line connecting your points\n\nThis helps you recall where you've been."
                    android:textSize="15sp"
                    android:textColor="#444444" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/step2_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/bg_card"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/step2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customize Sensor Preferences"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/step2_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="While the app works out of the box, you can fine-tune it to suit your needs. Go to Sensor Settings to:\n\n• Enable/disable specific sensors\n• Adjust sampling frequency\n• Reduce battery usage by disabling unused sensors\n\nThis ensures you're collecting only what matters to you."
                    android:textSize="15sp"
                    android:textColor="#444444" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:clipToOutline="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/sensor" />
                </FrameLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/step3_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/bg_card"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/step3_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Privacy Controls"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/step3_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your data stays on your device unless you choose to export it. You can delete sessions anytime under Timeline Settings > Location History.\n\n• Set auto-delete timeframes\n• Manually clear sessions by date\nYou're always in control."
                    android:textSize="15sp"
                    android:textColor="#444444" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/step5_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/bg_card"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/step5_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auto-Start Recording"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/step5_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="When enabled, this feature automatically starts sensor recording the moment you open the app — no need to tap any buttons. \n\nYou can toggle this in Timeline Settings > Auto-Start Recording.\n\nThis is ideal if you want seamless, passive tracking without manual input."
                    android:textSize="15sp"
                    android:textColor="#444444" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:clipToOutline="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/start" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/step7_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/bg_card"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/step7_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Built-in Help Tooltips"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/step7_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New to Timeline? Don’t worry — tooltips will guide you through key features the first time you use the app. These popups explain buttons, panels, and map tools.\n\nYou can dismiss tips anytime, and even revisit them later through Help > About ."
                    android:textSize="15sp"
                    android:textColor="#444444" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:clipToOutline="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/tooltip" />
                </FrameLayout>
            </LinearLayout>




            <LinearLayout
                android:id="@+id/step4_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/bg_card"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/step4_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coming Soon: Smart Summaries"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/step4_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We're working on a feature that gives you weekly insights and trends. Stay tuned via the Help or About page for updates."
                    android:textSize="15sp"
                    android:textColor="#444444" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="16dp"
                android:background="#E0E0E0"
                android:clipToOutline="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="[Image Placeholder: Helpful Features]"
                    android:textColor="#777777"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="16dp" />
            </FrameLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Need more help? Tap the Help icon in the top-right menu to contact support or revisit tutorials."
                android:textSize="14sp"
                android:textColor="#999999"
                android:gravity="center"
                android:paddingHorizontal="24dp"
                android:layout_marginTop="24dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>