<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recording_help_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="20dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="32dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_autostart"
            android:contentDescription="Recording icon"
            android:tint="#BF1E12"
            android:layout_marginTop="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How to Start/Stop Recording"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_marginTop="12dp"
            android:letterSpacing="0.02" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track your movement using the recording button on the main screen."
            android:textSize="15sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What does 'recording' mean?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#111111"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recording activates your deviceâ€™s sensors and location to track your movement over time. These are saved as sessions you can view later."
                android:textSize="15sp"
                android:textColor="#444444" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How to start/stop recording"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#111111"
                android:layout_marginBottom="8dp" />

            <!--need to rewrite the description and adjust to navigate to the sensor settings page instead of quick-start-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="via Quick Start \n\n1. Tap the green play button on the main screen.\n2. Grant permission when prompted (only once).\n3. The button turns red and a popup says 'Recording Started'.\n4. Your journey is now being logged automatically.\n5. To stop, tap the red button again. It will turn green."
                android:textSize="15sp"
                android:textColor="#444444"
                android:layout_marginBottom="12dp" />

            <ImageView
                android:id="@+id/help_recording"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:contentDescription="Screenshot of the recording button on the main screen"
                android:scaleType="centerCrop"
                android:src="@drawable/quickstart" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="via Sensor Settings \n\n1. Tap the profile icon > Sensor Settings.\n2. Toggle the sensors you want to use.\n3. Check the descriptions under each sensor to understand what it tracks.\n4. Tap 'Start Recording' at the top.\n5. Grant permissions only for sensors you selected.\n6. You can leave the page. It will continue recording.\n7. To stop, return and tap 'Stop Recording'."
                android:textSize="15sp"
                android:textColor="#444444"
                android:layout_marginBottom="12dp" />

            <ImageView
                android:id="@+id/help_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/recording"
                android:contentDescription="Screenshot of the recording button on the main screen" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What happens after?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#111111"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your recorded data appears in the timeline bar and map view. You can explore each session, view trajectories, and check time intervals."
                android:textSize="15sp"
                android:textColor="#444444" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:paddingHorizontal="24dp"
            android:text="Tip: Once recording starts, you can freely navigate the app or even lock your screen. Data will continue to log in the background until stopped."
            android:textColor="#999999"
            android:textSize="14sp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
