{
	"ServiceSpec": {
		"Name": "virtual-sensor-agent",
		"TaskTemplate": {
			"ContainerSpec": {
				"Image": "ghcr.io/cambridge-cares/virtual-sensor-agent:1.4",
				"Env": [
					"STACK_NAME=${STACK_NAME}",
					"DATABASE=postgres",
					"JPDA_ADDRESS=0.0.0.0:5005",
					"JPDA_TRANSPORT=dt_socket",
					"DEBUG=ON"
				],
				"Configs": [
					{
						"ConfigName": "postgis"
					},
					{
						"ConfigName": "blazegraph"
					},
					{
						"ConfigName": "ontop"
					},
					{
						"ConfigName": "geoserver"
					}
				],
				"Secrets": [
					{
						"SecretName": "postgis_password"
					},
					{
						"SecretName": "geoserver_password"
					}
				],
				"Mounts": [
					{
						"Type": "volume",
						"Source": "logs",
						"Target": "/root/.jps"
					}
				]
			}
		},
		"EndpointSpec": {
			"Ports": [
				{
					"Name": "web",
					"Protocol": "tcp",
					"TargetPort": "5005",
					"PublishedPort": "5007"
				}
			]
		}
	},
	"endpoints": {
		"virtual-sensor-agent": {
			"url": "http://localhost:8080/VirtualSensorAgent/",
			"externalPath": "/virtual-sensor-agent/"
		}
	}
}