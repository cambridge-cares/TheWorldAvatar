    "version": "0.2.0",
    "configurations": [
        {
            "type": "python",
            "name": "Debug",
            "request": "attach",
            "host": "localhost",
            "port": 5678,
            "preLaunchTask": "compose-deploy",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ]
        },
        {
            "type": "python",
            "name": "Build and Debug",
            "request": "attach",
            "host": "localhost",
            "port": 5678,
            "preLaunchTask": "compose-build-deploy",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ]
        },
        {
            "type": "python",
            "name": "Reattach and Debug",
            "request": "attach",
            "host": "localhost",
            "port": 5678,
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ]
        }
    ]
}