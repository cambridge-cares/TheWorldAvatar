{
    "compilerOptions": {
        "baseUrl": "src",
        "target": "es6",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "strictNullChecks": false,
        "typeRoots": ["../node_modules/@types"],
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx", 
        ".next/types/**/*.ts",
        "api/files/[name].js",
        "server.js"
    ],
    "exclude": [
        "node_modules"
    ]
}