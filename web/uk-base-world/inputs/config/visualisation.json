{
    "type": "visualisation",
    "ServiceSpec": {
        "Name": "visualisation",
        "TaskTemplate": {
            "ContainerSpec": {
                "Image": "ghcr.io/cambridge-cares/dtvf-base-image:4",
                "Mounts": [
                    {
                        "Type": "volume",
                        "Source": "vis-files",
                        "Target": "/var/www/html"
                    }
                ],
                "Secrets": [
                    {
                        "SecretName": "mapbox_username",
                        "File": {
                            "Name": "/var/www/html/mapbox_username"
                        }
                    },
                    {
                        "SecretName": "mapbox_api_key",
                        "File": {
                            "Name": "/var/www/html/mapbox_api_key"
                        }
                    }
                ]
            }
        }
    },
    "endpoints": {
        "ui": {
            "url": "http://localhost/",
            "externalPath": "/visualisation/"
        }
    }
}