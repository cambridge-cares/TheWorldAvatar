{
    "ServiceSpec": {
      "Name": "isochroneagent",
      "TaskTemplate": {
        "ContainerSpec": {
          "Image": "ghcr.io/cambridge-cares/isochroneagent:1.3.0",
          "Mounts": [
            {
              "Type": "bind",
              "Source": "<REPLACE_WITH_YOUR_DIRECTORY>/TheWorldAvatar/Agents/IsochroneAgent/inputs",
              "Target": "/inputs"
            }
          ],
          "Configs": [
            {
              "ConfigName": "blazegraph"
            },
            {
              "ConfigName": "postgis"
            },
            {
              "ConfigName": "geoserver"
            }
          ],
          "Secrets": [
            {
              "SecretName": "postgis_password"
            },
            {
              "SecretName": "geoserver_password"
            }
          ]
        }
      }
    },
    "endpoints": {
      "isochroneagent": {
        "url": "http://localhost:8080/isochroneagent/",
        "externalPath": "/isochroneagent/"
      }
    }
  }