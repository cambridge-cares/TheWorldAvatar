{
  "type": "basic-agent",
  "ServiceSpec": {
    "Name": "user-agent",
    "TaskTemplate": {
      "ContainerSpec": {
        "Image": "ghcr.io/cambridge-cares/user-agent:2.0.0-ouraring-SNAPSHOT",
        "Mounts": [
          {
            "Type": "bind",
            "Source": "user.obda",
            "Target": "/inputs/user.obda"
          }
        ],
        "Configs": [
          {
            "ConfigName": "blazegraph"
          },
          {
            "ConfigName": "postgis"
          },
          {
            "ConfigName": "ontop"
          }
        ],
        "Secrets": [
          {
            "SecretName": "postgis_password"
          }
        ]
      }
    }
  },
  "endpoints": {
    "rest": {
      "url": "http://localhost:8080/user-agent/",
      "externalPath": "/user-agent/"
    }
  }
}