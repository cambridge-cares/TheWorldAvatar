    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Debug",
            "request": "attach",
            "hostName": "localhost",
            "port": "${input:debug.port}",
            "preLaunchTask": "compose-deploy",
            "projectName": "${workspaceFolderBasename}"
        },
        {
            "type": "java",
            "name": "Build and Debug",
            "request": "attach",
            "hostName": "localhost",
            "port": "${input:debug.port}",
            "preLaunchTask": "compose-build-deploy",
            "projectName": "${workspaceFolderBasename}"
        },
        {
            "type": "java",
            "name": "Reattach and Debug",
            "request": "attach",
            "hostName": "localhost",
            "port": "${input:debug.port}",
            "projectName": "${workspaceFolderBasename}"
        }
    ],
    "inputs": [
        {
            "id": "debug.port",
            "type": "pickString",
            // Get the next avaliable debug port and write it to the cache file
            "description": "debug port",
            "options": [
                "5005",
                "5006",
                "5007"
            ],
            "default": "5005"
        },
    ]
}