{
    "ServiceSpec": {
        "Name": "gdal",
        "TaskTemplate": {
            "ContainerSpec": {
                "Image": "osgeo/gdal:alpine-normal-latest",
                "Command": [
                    "tail",
                    "-f",
                    "/dev/null"
                ],
                "Mounts": [
                    {
                        "Type": "volume",
                        "Source": "geotiffs",
                        "Target": "/geotiffs"
                    }
                ],
                "Configs": [
                    {
                        "ConfigName": "postgis"
                    }
                ],
                "Secrets": [
                    {
                        "SecretName": "postgis_password"
                    }
                ]
            }
        }
    }
}