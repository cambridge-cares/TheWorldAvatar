{
    "ServiceSpec": {
        "Name": "volume-populator",
        "TaskTemplate": {
            "ContainerSpec": {
                "Image": "busybox",
                "Env": [
                    "HOST_DIR=/hostDirs/.",
                    "VOLUME_DIR=/volumes"
                ],
                "Command": [
                    "cp",
                    "-rf",
                    "$HOST_DIR",
                    "$VOLUME_DIR"
                ]
            }
        }
    }
}