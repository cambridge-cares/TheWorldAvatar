{
    "ServiceSpec": {
        "Name": "volume-populator",
        "TaskTemplate": {
            "ContainerSpec": {
                "Image": "busybox:latest",
                "Env": [
                    "HOST_DIR=/hostDirs/.",
                    "VOLUME_DIR=/volumes"
                ],
                "Command": [
                    "sh",
                    "-c",
                    "cp -rf $HOST_DIR $VOLUME_DIR"
                ]
            }
        }
    }
}