{
    "type": "nginx",
    "ServiceSpec": {
        "Name": "nginx",
        "TaskTemplate": {
            "ContainerSpec": {
                "Image": "docker.io/nginx:1.27.3",
                "Mounts": [
                    {
                        "Type": "volume",
                        "Source": "nginx_config",
                        "Target": "/etc/nginx/conf.d"
                    }
                ]
            }
        },
        "EndpointSpec": {
            "Ports": [
                {
                    "Name": "web",
                    "Protocol": "tcp",
                    "TargetPort": "80",
                    "PublishedPort": "3838"
                }
            ]
        }
    }
}