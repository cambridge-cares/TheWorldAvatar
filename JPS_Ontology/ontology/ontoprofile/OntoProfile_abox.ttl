@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix op: <https://www.theworldavatar.com/kg/ontoprofile/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

op:WorkResponsibilityEnum a op:WorkResponsibility ;
  owl:oneOf (
    op:Contact
    op:Driver
    op:OperationManager
    op:OperationScheduler
    op:SalesAdmin
) .

op:ServiceContact a op:WorkResponsibilityEnum ;
  rdfs:label "contact";
  rdfs:comment "In charge of being the main point of contact for a specific service".

op:Driver a op:WorkResponsibilityEnum ;
  rdfs:label "driver";
  rdfs:comment "In charge of driving a vehicle.".

op:OperationManager a op:WorkResponsibilityEnum ;
  rdfs:label "operation manager";
  rdfs:comment "Manages and supervises the operational conditions of any service.".

op:OperationScheduler a op:WorkResponsibilityEnum ;
  rdfs:label "operation scheduler";
  rdfs:comment "Manages the operational schedule of service.".

op:SalesAdmin a op:WorkResponsibilityEnum ;
  rdfs:label "sales admin";
  rdfs:comment "Primarily based at the front-desk to communicate with clients about the company's products and/or services.".